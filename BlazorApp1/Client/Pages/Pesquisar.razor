@page "/pesquisar"
@using BlazorApp1.Shared
@inject HttpClient Http
<PageTitle>Pesquisar</PageTitle>

<h1>Pesquisar</h1>
<body >
    
    @if (estados == null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Código IBGE</label>
            <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
        </div>
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Cidade</label>
            <select class="form-select" aria-label="Default select example">
                <option selected>Selecione um Estado</option>
                @foreach (var cidade in cidades)
                {
                    <option value="@cidade">@cidade</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Estado</label>
            <select class="form-select" aria-label="Default select example">
                <option selected>Selecione um Estado</option>
                @foreach (var estado in estados)
                {
                    <option value="@estado">@estado</option>
                }
            </select>
        </div>
        <button class="btn btn-primary">Click me</button>
    }
    
</body>
@code {
    private List<string>? estados;
    private List<string>? cidades;
    public async void buscarEstado()
    {
        estados = await Http.GetFromJsonAsync<List<string>>("Ibge/estados");
    }
    public async void buscarCidades()
    {
        cidades = await Http.GetFromJsonAsync<List<string>>("Ibge/cidades");
    }
    protected override async Task OnInitializedAsync()
    {
        buscarEstado();
        buscarCidades();
    }
}
